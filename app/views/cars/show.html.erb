<% @car.attributes.except('id').each do |key,item| %>
  <% if key == "created_at" || key == "updated_at" %>
    <p><%= I18n.t("activerecord.attributes.car." + key) %>：<%= item.strftime("%Y-%m-%d %H:%M") %></p>
  <% elsif key == "division" || key == "oil_type" %>
    <p><%= I18n.t("activerecord.attributes.car." + key) %>：<%= I18n.t("table.value.car." + item) %></p>
  <% else %>
    <p><%= I18n.t("activerecord.attributes.car." + key) %>：<%= item %></p>
  <% end %>
<% end %>
<%= link_to '編集', cars_edit_path(@car.id), class: "btn btn-primary" %>
<%= link_to '削除', cars_destroy_path, data: { turbo_method: :delete, turbo_confirm: "ほんまに消すん？" }, class: "btn btn-danger" %>